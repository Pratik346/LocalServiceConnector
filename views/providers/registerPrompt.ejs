<% layout("/layouts/boilerplate") %>

<style>
  .provider-empty-card {
    border-radius: 20px;
    background: linear-gradient(135deg, #f0fdf4, #dcfce7);
  }

  .provider-icon {
    width: 90px;
    height: 90px;
    background: #22c55e;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    margin: 0 auto;
  }

  .provider-info {
    background: white;
    border-radius: 14px;
    padding: 12px 16px;
    font-size: 0.95rem;
  }
</style>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">

      <div class="card shadow-lg p-4 provider-empty-card text-center">
        <div class="provider-icon mb-3">
          <i class="fa-solid fa-id-badge"></i>
        </div>
        <h3 class="fw-bold text-success mb-2">
          Create Your Service Provider Profile
        </h3>
        <p class="text-muted mb-4">
          You haven't created your service provider profile yet.
          <br>
          <strong>Only one profile is allowed per account.</strong>
        </p>
        <div class="provider-info mb-4 text-start">
          <ul class="mb-0">
            <li>Add your service details</li>
            <li>Set pricing & experience</li>
            <li>Become visible to customers</li>
          </ul>
        </div>
        <div class="d-grid">
          <a href="/providers/new" class="btn btn-success btn-lg">
            <i class="fa-solid fa-pen-to-square me-2"></i>
            Create Profile
          </a>
        </div>

      </div>

    </div>
  </div>
</div>
